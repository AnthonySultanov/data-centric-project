<body>
    <h1>Departments</h1>

    <br>
   
   

    <!-- table with did ,name,budget,location,delete and a delete butoon -->
    <table>
        <tr>
            <th>DID</th>
            <th>Name</th>
            <th>Budget</th>
            <th>Location</th>
            <th>Delete</th>
        </tr>
        <% for (let i=0; i < depts.length; i++) { %>
            <tr>
                <td>
                    <%= depts[i].did %>
                </td>
                <td>
                    <%= depts[i].dname %>
                </td>
                <td>
                    <%= depts[i].budget %>
                </td>
                <td src="location">
                    <%= depts[i].county %>
                </td>
                <td>
                    <a href="/depts/delete/<%= depts[i].did %>">Delete</a>
                </td>
            </tr>
            <% } %>
    </table>

    <a href="/">Home</a>
</body>